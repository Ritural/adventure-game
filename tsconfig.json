{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2017",
      "esnext"
    ],
    "baseUrl": "./",
    "paths": {
      "public/*": [ "public/*" ],
      "game/*": ["src/game/*"],
      "components/*": [ "src/components/*" ],
      "containers/*": [ "src/containers/*" ],
      "state/*": [ "src/state/*" ],
      "routes/*": [ "src/routes/*" ],
      "maps/*": [ "src/maps/*" ],
      "types/*": [ "src/types/*" ],
      "helpers/*": [ "src/helpers/*" ],
      "assets/*": [ "src/assets/*" ],
      "utilities/*": [ "src/utilities/*" ]
    }
  },
  "include": [
    "./src/**/*",
    "./definitions/*"
  ],
  "exclude": ["node_modules", "public", ".cache"]
}